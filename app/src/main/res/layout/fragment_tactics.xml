<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_app"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.peacecorps.pcsa.safety_tools.TacticsFragment">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/tactics_subtitle"
        android:textColor="@color/primary_text_default_material_dark"
        android:textSize="@dimen/sub_title_font"
        android:textStyle="bold" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/abc_action_bar_icon_vertical_padding_material"
        android:layout_weight="@integer/intro4_linear_layout_weight"
        android:fadeScrollbars="false">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fadeScrollbars="false"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/activity_vertical_margin">

            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_textview_rounded_rectangle"
                android:scrollbars="vertical">

                <com.bluejamesbond.text.DocumentView xmlns:ext="http://schemas.android.com/apk/res-auto"
                    ext:documentView_textAlignment="justified"
                    android:id="@+id/tactics_characteristics_assault"
                    android:layout_width="@dimen/reporting_types_width"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:fadeScrollbars="false"
                    ext:documentView_insetPadding="@dimen/reporting_types_padding"
                    android:scrollbarStyle="insideInset"
                    ext:documentView_antialias="true"
                    ext:documentView_textColor="@color/primary_text_default_material_dark" />
              
            </ScrollView>

            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:background="@drawable/bg_textview_rounded_rectangle"
                android:scrollbars="vertical">

                <com.bluejamesbond.text.DocumentView xmlns:ext="http://schemas.android.com/apk/res-auto"
                    ext:documentView_textAlignment="justified"
                    android:id="@+id/tactics_tactics_assault"
                    android:layout_width="@dimen/reporting_types_width"
                    android:layout_height="match_parent"
                    android:fadeScrollbars="false"
                    ext:documentView_insetPadding="@dimen/reporting_types_padding"
                    android:scrollbarStyle="insideInset"
                    ext:documentView_antialias="true"
                    ext:documentView_textColor="@color/primary_text_default_material_dark" />
            </ScrollView>


        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>