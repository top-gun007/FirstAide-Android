<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/background_app"
    tools:context=".SingleTextViewFragment"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/contact_pick_button_margin">

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/primary_text_default_material_dark"
            android:textSize="@dimen/sub_title_font" />

        <com.bluejamesbond.text.DocumentView xmlns:ext="http://schemas.android.com/apk/res-auto"
            ext:documentView_textAlignment="justified"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ext:documentView_textColor="@color/primary_text_default_material_dark"
            android:id="@+id/wasContent"
            android:background="@drawable/bg_textview_rounded_rectangle"
            ext:documentView_insetPadding="@dimen/reporting_types_padding"
            android:scrollbars="vertical"
            ext:documentView_textSize="18sp"
            android:layout_marginTop="@dimen/contacting_post_staff_marginTop_15"
            android:fadeScrollbars="false"
            android:scrollbarStyle="insideInset"
            ext:documentView_antialias="true" />

        <include
            layout="@layout/button"
            android:id="@+id/knowButton"/>

    </LinearLayout>

</ScrollView>