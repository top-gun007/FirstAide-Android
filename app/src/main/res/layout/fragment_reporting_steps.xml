<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_app"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_vertical_margin"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/reporting_steps"
                android:gravity="center"
                android:textColor="@color/primary_text_default_material_dark"
                android:textStyle="bold"
                android:textSize="@dimen/title_font"
                android:id="@+id/reporting_title_steps"
                android:layout_gravity="center"/>
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/activity_vertical_margin">

            <com.bluejamesbond.text.DocumentView xmlns:ext="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:autoLink="web|email"
                android:background="@drawable/bg_textview_rounded_rectangle"
                android:fadeScrollbars="false"
                ext:documentView_insetPadding="@dimen/textview_padding"
                android:scrollbars="vertical"
                ext:documentView_textColor="@color/primary_text_default_material_dark"
                android:textColorLink="@color/text_color_link"
                ext:documentView_antialias="true"
                android:id="@+id/reporting_step1"
                ext:documentView_textSize="@dimen/abc_text_size_medium_material"
                ext:documentView_textAlignment="justified" />

            <com.bluejamesbond.text.DocumentView xmlns:ext="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:autoLink="web|email"
                android:background="@drawable/bg_textview_rounded_rectangle"
                android:fadeScrollbars="false"
                ext:documentView_insetPadding="@dimen/textview_padding"
                android:scrollbars="vertical"
                ext:documentView_textColor="@color/primary_text_default_material_dark"
                android:textColorLink="@color/text_color_link"
                ext:documentView_antialias="true"
                android:id="@+id/reporting_step2"
                ext:documentView_textSize="@dimen/abc_text_size_medium_material"
                ext:documentView_textAlignment="justified" />

            <com.bluejamesbond.text.DocumentView xmlns:ext="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:autoLink="web|email"
                android:background="@drawable/bg_textview_rounded_rectangle"
                android:fadeScrollbars="false"
                ext:documentView_insetPadding="@dimen/textview_padding"
                android:scrollbars="vertical"
                ext:documentView_textColor="@color/primary_text_default_material_dark"
                android:textColorLink="@color/text_color_link"
                ext:documentView_antialias="true"
                android:id="@+id/reporting_step3"
                ext:documentView_textSize="@dimen/abc_text_size_medium_material"
                ext:documentView_textAlignment="justified" />

            <com.bluejamesbond.text.DocumentView xmlns:ext="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:autoLink="web|email"
                android:background="@drawable/bg_textview_rounded_rectangle"
                android:fadeScrollbars="false"
                ext:documentView_insetPadding="@dimen/textview_padding"
                android:scrollbars="vertical"
                ext:documentView_textColor="@color/primary_text_default_material_dark"
                android:textColorLink="@color/text_color_link"
                ext:documentView_antialias="true"
                android:id="@+id/reporting_step4"
                ext:documentView_textSize="@dimen/abc_text_size_medium_material"
                ext:documentView_textAlignment="justified" />

            <com.bluejamesbond.text.DocumentView xmlns:ext="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:autoLink="web|email"
                android:background="@drawable/bg_textview_rounded_rectangle"
                android:fadeScrollbars="false"
                ext:documentView_insetPadding="@dimen/textview_padding"
                android:scrollbars="vertical"
                ext:documentView_textColor="@color/primary_text_default_material_dark"
                android:textColorLink="@color/text_color_link"
                ext:documentView_antialias="true"
                android:id="@+id/reporting_step5"
                ext:documentView_textSize="@dimen/abc_text_size_medium_material"
                ext:documentView_textAlignment="justified" />

            <com.bluejamesbond.text.DocumentView xmlns:ext="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:autoLink="web|email"
                android:background="@drawable/bg_textview_rounded_rectangle"
                android:fadeScrollbars="false"
                ext:documentView_insetPadding="@dimen/textview_padding"
                android:scrollbars="vertical"
                ext:documentView_textColor="@color/primary_text_default_material_dark"
                android:textColorLink="@color/text_color_link"
                ext:documentView_antialias="true"
                android:id="@+id/reporting_step6"
                ext:documentView_textSize="@dimen/abc_text_size_medium_material"
                ext:documentView_textAlignment="justified" />
        </LinearLayout>

    </LinearLayout>
    </ScrollView>